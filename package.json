{
  "$path": "package.json",
  "name": "cond8-docs",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o public/dist/styles.css",
    "build:mdx": "tsx scripts/mdx-builder/mdx-build.ts",
    "build": "pnpm build:css && pnpm build:mdx",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./public/dist/styles.css --watch",
    "dev:mdx": "nodemon --watch src/_stage/content --ext md,mdx --exec 'pnpm exec tsx scripts/mdx-builder/mdx-build.ts'",
    "dev": "node ./scripts/dev.mjs",
    "cf-typegen": "wrangler types",
    "deploy": "wrangler deploy",
    "start": "wrangler dev"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dedent": "^1.5.3",
    "hono": "^4.7.7",
    "jest-diff": "^29.7.0",
    "katex": "^0.16.22",
    "miniflare": "^4.20250416.0",
    "openai": "^4.95.0",
    "preact": "^10.26.5",
    "preact-render-to-string": "^6.5.13",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250417.0",
    "@mdx-js/mdx": "^3.1.0",
    "@swc/core": "^1.11.21",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.10",
    "tailwindcss": "^4.1.4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.12.0"
  }
}
